<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ex.connectionstatus.MainActivity">


    <TextView
        android:id="@+id/text_network_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text=""
        android:textColor="#222"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />


    <TextView
        android:id="@+id/text_network_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#666"
        android:textStyle="italic"
        android:layout_below="@+id/text_network_type"
        android:layout_alignLeft="@+id/text_network_type"
        android:layout_alignStart="@+id/text_network_type" />

    <TextView
        android:id="@+id/text_connection_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text=""
        android:textColor="#222"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"/>


    <TextView
        android:id="@+id/text_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#222"
        android:textStyle="italic"
        android:layout_below="@+id/text_connection_type"
        android:layout_alignLeft="@+id/text_connection_type"
        android:layout_alignStart="@+id/text_connection_type" />



</RelativeLayout>
